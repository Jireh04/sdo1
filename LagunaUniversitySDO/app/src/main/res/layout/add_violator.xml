<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <!-- Date and Time Picker -->
    <TextView
        android:id="@+id/dateTimeLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Date | Time"
        android:textStyle="bold"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/dateTimeEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="mm/dd/yyyy --:--"
        android:inputType="none"
        android:focusable="false"
        android:clickable="false"
        android:enabled="false"/>

    <!-- Reporter ID -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reporter ID"
        android:textStyle="bold"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/reporterIdEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter reporter's ID" />

    <!-- Reporter -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reporter"
        android:textStyle="bold"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/reporterEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter reporter's name" />

    <!-- Location -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Location"
        android:textStyle="bold"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/locationEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter location" />

    <!-- Violation Spinner -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Violation"
        android:textStyle="bold"
        android:textSize="16sp" />

    <Spinner
        android:id="@+id/violationSpinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <!-- Remarks (Optional) -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Remarks (Optional)"
        android:textStyle="bold"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/remarksEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter remarks (Optional)" />

    <!-- Submit Button -->
    <Button
        android:id="@+id/submitButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:background="@android:color/holo_green_dark"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:layout_marginTop="16dp" />
</LinearLayout>
