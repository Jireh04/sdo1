<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="8dp">

    <!-- Reporter name -->
    <TextView
        android:id="@+id/reporterName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Reporter Name"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/viewLogsButton"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginEnd="8dp" />

    <!-- View Logs button -->
    <Button
        android:id="@+id/viewLogsButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="View Logs"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <!-- Placeholder for dynamic button (optional) -->
    <Button
        android:id="@+id/dynamicLogsButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="View Logs Details"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/viewLogsButton"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>
