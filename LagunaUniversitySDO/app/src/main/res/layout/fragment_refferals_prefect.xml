<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- HorizontalScrollView for buttons -->
        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">

            <TableLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:stretchColumns="*">

                <TableRow>

                    <!-- Pending button -->
                    <Button
                        android:id="@+id/btn_pending"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="PENDING"
                        android:layout_marginEnd="16dp"
                        android:onClick="onPendingClick"
                        android:layout_gravity="center" />

                    <!-- Accepted Referral button -->
                    <Button
                        android:id="@+id/btn_accepted"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ACCEPTED REFERRAL"
                        android:layout_marginEnd="16dp"
                        android:onClick="onAcceptedClick"
                        android:layout_gravity="center" />

                    <!-- Rejected Referral button -->
                    <Button
                        android:id="@+id/btn_rejected"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="REJECTED REFERRAL"
                        android:onClick="onRejectedClick"
                        android:layout_gravity="center" />

                </TableRow>

            </TableLayout>

        </HorizontalScrollView>

        <!-- ScrollView with a LinearLayout to display pending referrals -->
        <ScrollView
            android:id="@+id/scroll_view_pending"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"> <!-- Initially hidden -->

            <LinearLayout
                android:id="@+id/linear_layout_pending"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" />
        </ScrollView>

        <!-- Layout for accepted referrals -->
        <LinearLayout
            android:id="@+id/linear_layout_accepted"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <ScrollView
            android:id="@+id/scroll_view_accepted"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone">

            <TableLayout
                android:id="@+id/table_layout_accepted"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:stretchColumns="1">
            </TableLayout>

        </ScrollView>



        <!-- Layout for rejected referrals -->
        <LinearLayout
            android:id="@+id/linear_layout_rejected"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <!-- ScrollView for rejected referrals -->
        <ScrollView
            android:id="@+id/scroll_view_rejected"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone">
            <!-- Your list of rejected referrals here -->
        </ScrollView>

    </LinearLayout>
</ScrollView>
