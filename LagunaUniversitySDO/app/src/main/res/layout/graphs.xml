<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="400dp"
    android:layout_gravity="bottom"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- RelativeLayout to contain buttons and boxes -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- Minimize Button -->
        <ImageButton
            android:id="@+id/minimize_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="48dp"
            android:background="@null"
            android:contentDescription="Minimize Graphs"
            android:src="@drawable/baseline_clear_24" />

        <!-- Exit Button -->
        <ImageButton
            android:id="@+id/exit_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/minimize_button"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="48dp"
            android:background="@null"
            android:contentDescription="Exit Graphs"
            android:src="@drawable/baseline_minimize_24" />

        <!-- Horizontal LinearLayout to contain the boxes in a single line -->
        <LinearLayout
            android:layout_width="408dp"
            android:layout_height="160dp"
            android:layout_marginTop="50dp"
            android:gravity="center"
            android:orientation="horizontal">

            <!-- First Box -->
            <LinearLayout
                android:layout_width="120dp"
                android:layout_height="100dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/rounded_background1"
                android:orientation="vertical"
                android:padding="5dp">

                <ImageView
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="8dp"
                    android:layout_marginTop="5dp"
                    android:contentDescription="Box 1 Icon"
                    android:src="@drawable/baseline_inventory_24_white" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="TOTAL STUDENT WITH VIOLATION"
                    android:textAlignment="center"
                    android:textColor="@color/dark_grey"
                    android:textSize="8sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="123"
                    android:textColor="@color/dark_grey"
                    android:textSize="18sp" />
            </LinearLayout>

            <!-- Second Box -->
            <LinearLayout
                android:layout_width="120dp"
                android:layout_height="100dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/rounded_background2"
                android:orientation="vertical"
                android:padding="5dp">

                <ImageView
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="8dp"
                    android:layout_marginTop="5dp"
                    android:contentDescription="Box 2 Icon"
                    android:src="@drawable/baseline_category_24_white" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="TOTAL SETTLED VIOLATION"
                    android:textAlignment="center"
                    android:textColor="@color/dark_grey"
                    android:textSize="8sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="456"
                    android:textColor="@color/dark_grey"
                    android:paddingTop="5dp"
                    android:textSize="18sp" />
            </LinearLayout>

            <!-- Third Box -->
            <LinearLayout
                android:layout_width="120dp"
                android:layout_height="100dp"
                android:background="@drawable/rounded_background3"
                android:orientation="vertical"
                android:padding="5dp">

                <ImageView
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="8dp"
                    android:layout_marginTop="5dp"
                    android:contentDescription="Box 3 Icon"
                    android:src="@drawable/baseline_group_24_white" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="TOTAL UNSETTLED VIOLATION"
                    android:textAlignment="center"
                    android:textColor="@color/dark_grey"
                    android:textSize="8sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="789"
                    android:textColor="@color/dark_grey"
                    android:textSize="18sp" />
            </LinearLayout>

        </LinearLayout>

        <!-- Scrollable Horizontal Section -->
        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="828dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="200dp"
                android:orientation="horizontal"
                android:padding="16dp">

                <!-- BarChart -->

                <!-- Line Chart -->
                <com.github.mikephil.charting.charts.BarChart
                    android:id="@+id/barchart"
                    android:layout_width="300dp"
                    android:layout_height="200dp"
                    android:layout_marginEnd="20dp" />

                <com.github.mikephil.charting.charts.LineChart
                    android:id="@+id/linechart"
                    android:layout_width="300dp"
                    android:layout_height="200dp"
                    android:layout_marginEnd="20dp" />
            </LinearLayout>
        </HorizontalScrollView>

    </RelativeLayout>
</FrameLayout>
