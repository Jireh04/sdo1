<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/main"
    tools:context=".QRScannerActivity">

    <!-- Title Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="15dp"
        android:gravity="center_horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SDOMS"
            android:textColor="@color/green3"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="REFERRAL"
            android:textColor="@android:color/darker_gray"
            android:textSize="16sp" />
    </LinearLayout>

    <!-- Button Container to align side by side -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="200dp"
        android:layout_marginHorizontal="16dp">

        <!-- Refer to Guidance Button -->
        <Button
            android:id="@+id/referToGuidance"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/roundedbutton"
            android:text="Refer to Guidance"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:layout_marginEnd="8dp" />

        <!-- View Reporters Button -->
        <Button
            android:id="@+id/ViewReportes"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/roundedbutton"
            android:text="View Reporters"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:layout_marginStart="8dp" />
    </LinearLayout>

    <!-- Search Section -->
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:layout_marginTop="100dp"
        android:stretchColumns="1">

        <!-- Search Row -->
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp">

            <EditText
                android:id="@+id/search_bar"
                android:layout_width="400dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Search"
                android:inputType="text"
                android:imeOptions="actionSearch" />

            <Button
                android:id="@+id/search_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="Search" />

            <!-- QR Scanner Button -->
            <ImageButton
                android:id="@+id/pick_qr_code_button"
                android:layout_width="wrap_content"
                android:layout_height="53dp"
                android:contentDescription="Scan QR Code"
                android:src="@drawable/baseline_qr_code_scanner_24" />
        </TableRow>

        <!-- Scrollable Search Results Section -->
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/search_results_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="8dp" />
        </TableRow>
    </TableLayout>

    <!-- Pagination Controls -->
    <LinearLayout
        android:id="@+id/pagination_controls"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:orientation="horizontal"
        android:gravity="center"
        android:padding="8dp"
        android:visibility="gone">

        <Button
            android:id="@+id/prev_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Previous" />

        <!-- Container for Page Number TextViews -->
        <LinearLayout
            android:id="@+id/page_number_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:orientation="horizontal"
            android:gravity="center_vertical" />

        <Button
            android:id="@+id/next_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Next" />
    </LinearLayout>

    <!-- Horizontal LinearLayout to contain the boxes in a single line -->
    <LinearLayout
        android:layout_width="408dp"
        android:layout_height="160dp"
        android:layout_marginTop="300dp"
        android:layout_marginEnd="10dp"
        android:gravity="center"
        android:orientation="horizontal">

        <!-- First Box -->
        <LinearLayout
            android:layout_width="120dp"
            android:layout_height="100dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/rounded_background1"
            android:orientation="vertical"
            android:padding="5dp">

            <ImageView
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="5dp"
                android:contentDescription="Box 1 Icon"
                android:src="@drawable/baseline_inventory_24_white" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="TOTAL STUDENT WITH VIOLATION"
                android:textAlignment="center"
                android:textColor="@color/dark_grey"
                android:textSize="8sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="123"
                android:textColor="@color/dark_grey"
                android:textSize="18sp" />
        </LinearLayout>

        <!-- Second Box -->
        <LinearLayout
            android:layout_width="120dp"
            android:layout_height="100dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/rounded_background2"
            android:orientation="vertical"
            android:padding="5dp">

            <ImageView
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="5dp"
                android:contentDescription="Box 2 Icon"
                android:src="@drawable/baseline_category_24_white" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="TOTAL SETTLED VIOLATION"
                android:textAlignment="center"
                android:textColor="@color/dark_grey"
                android:textSize="8sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="456"
                android:textColor="@color/dark_grey"
                android:paddingTop="5dp"
                android:textSize="18sp" />
        </LinearLayout>

        <!-- Third Box -->
        <LinearLayout
            android:layout_width="120dp"
            android:layout_height="100dp"
            android:background="@drawable/rounded_background3"
            android:orientation="vertical"
            android:layout_marginRight="15dp"
            android:padding="5dp">

            <ImageView
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="5dp"
                android:contentDescription="Box 3 Icon"
                android:src="@drawable/baseline_group_24_white" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="TOTAL UNSETTLED VIOLATION"
                android:textAlignment="center"
                android:textColor="@color/dark_grey"
                android:textSize="8sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="789"
                android:textColor="@color/dark_grey"
                android:textSize="18sp" />
        </LinearLayout>

    </LinearLayout>



    <!-- Scrollable Horizontal Section -->
    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="450dp"
            android:orientation="horizontal"
            android:padding="16dp">

            <!-- BarChart -->
            <com.github.mikephil.charting.charts.BarChart
                android:id="@+id/barchart"
                android:layout_width="300dp"
                android:layout_height="200dp"
                android:layout_marginEnd="20dp" />

            <!-- Line Chart -->
            <com.github.mikephil.charting.charts.LineChart
                android:id="@+id/linechart"
                android:layout_width="300dp"
                android:layout_height="200dp"
                android:layout_marginEnd="20dp" />

        </LinearLayout>
    </HorizontalScrollView>
</FrameLayout>
